{% embed 'partials/base.html.twig' %}
	{% set banner = page.media.images|first %}

{% set base_url = page.parent.url %}
  {% set feed_url = base_url %}
{% if base_url == '/' %}
  {% set base_url = '' %}
{% endif %}

{% set singular = true %}
{% set template_body_classes = 'is-not-singular not-front-page not-scrolled not-front-page single single-format-standard single-post' %}

{% if base_url == base_url_relative %}
  {% set feed_url = base_url~'/'~page.parent.slug %}
{% endif  %}


{% block content %}
  {% include 'partials/blog_item_alt.html.twig' with {'truncate':false,'big_header':true} %}

{% endblock %}
{% endembed %}
